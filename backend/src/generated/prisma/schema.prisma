model Agent {
  id        String     @id @default(uuid())
  name      String
  scenarios Scenario[]
  createdAt DateTime   @default(now())
}

enum Complexity {
  simple
  moderate
  high
}

enum TargetCategory {
  edge_case
  happy_path
  adversarial
  other
}

model Scenario {
  id      String @id @default(uuid())
  agentId String
  agent   Agent  @relation(fields: [agentId], references: [id], onDelete: Cascade)

  name            String
  description     String?
  userMessage     String
  expectedTools   Json
  complexity      Complexity
  targetCategory  TargetCategory
  isAutoGenerated Boolean        @default(true)
  createdAt       DateTime       @default(now())
}

